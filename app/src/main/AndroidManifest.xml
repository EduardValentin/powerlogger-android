<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.eduardv.powerlogger">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_main_launcer"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_main_launcer_round"
        android:supportsRtl="true"
        android:theme="@style/MyMaterialTheme"
        android:usesCleartextTraffic="true">

        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-2421168263848478~6576594677" />

        <activity
            android:name="com.eduardv.powerlogger.ui.includeWorkouts.IncludeGroupsActivity"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name="com.eduardv.powerlogger.ui.login.LoginActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.eduardv.powerlogger.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="fullSensor"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name="com.eduardv.powerlogger.ui.register.RegisterActivity"
            android:label="Register activity"
            android:windowSoftInputMode="adjustPan" />
    </application>

</manifest>